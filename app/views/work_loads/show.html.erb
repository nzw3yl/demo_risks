<div class="showform">
   <div>
    <strong>Name:</strong>
    <%= @work_load.name %>
    (#<%= @work_load.alias %>)
  </div>
   <div>
   <strong><%= @work_load.status %> </strong>
   <%= @work_load.completed_date %>
    <strong>, Risk Factor:</strong>
    <%= @work_load.priority%> 
  </div>
  
  <div>
    <strong>Type of Work:</strong>
    <%= @work_load_type_name %>
  </div>
  <div>
    <strong>Description:</strong>
    <%= @work_load.description %>
  </div>
  <div>
    <strong>Affected Contracts:</strong>
    <% @work_load.contracts.each do |wc| %>
    <%= link_to wc.name, contract_path(wc) %> | 
    <%  end %>
  </div>
  <div>
    <strong>Assigned Users:</strong>
    <% @work_load.users.each do |wu| %>
    <%= link_to wu.name, user_path(wu) %> |
    <%  end %>
  </div>
  <div>
    <strong> Resolution hours:</strong>
    <%= @work_load.resolution_effort %> , <%= @percent_complete %> % complete
  </div>
  <div>
    <strong> Requested Completion Date:</strong>
    <%= @work_load.requested_date %>
  </div>
  <div>
    <strong> Projected Completion Date: </strong>
    <%= @work_load.expected_date %>
  </div>
    <%= link_to "Edit", edit_work_load_path(@work_load) %> |
    <%= link_to "View All", work_loads_path %>
  </div>
</div>
