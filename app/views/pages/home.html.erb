<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="micropost">Update?</h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>
<% else %>
  <h1>Workload Manager</h1>

  <p>
    This is the home page for the
    <a href="http://workload.heroku.com/">Workload Manager</a>
    sample application.
  </p>

  <%= link_to "Sign up", signup_path, :class => "signup_button round" %>
<% end %>

